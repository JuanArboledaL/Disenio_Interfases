    <Grid Background="Black">
        <RepeatButton Style="{DynamicResource copiaFreno}" Name="freno" HorizontalAlignment="Left" Height="32" Margin="250,305,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="0.128,1.138" Click="freno_Click">
            <RepeatButton.Background>
                <ImageBrush ImageSource="/freno.jpg"/>
            </RepeatButton.Background>
        </RepeatButton>
        <RepeatButton Style="{DynamicResource copiaaCELERADOR}" Name="acelerador" HorizontalAlignment="Left" Height="68" Margin="361,305,0,0" VerticalAlignment="Top" Width="28" Click="acelerador_Click" RenderTransformOrigin="0.357,0.809">
            <RepeatButton.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </RepeatButton.RenderTransform>
            <RepeatButton.Background>
                <ImageBrush ImageSource="/acelerador.jpg"/>
            </RepeatButton.Background>
        </RepeatButton>
        <Image x:Name="tacometro" HorizontalAlignment="Left" Height="144" Margin="250,56,0,0" VerticalAlignment="Top" Width="143" Source="/tacometro.png"/>
        <Rectangle Name="aguja" HorizontalAlignment="Left" Height="53" Margin="317,128,0,0" Stroke="#FFFF0606" VerticalAlignment="Top" Width="2" Fill="#FFFF0101" RenderTransformOrigin="0.458,0.01">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform x:Name="rotarAguja" Angle="0"/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label x:Name="velocimetro" HorizontalAlignment="Left" Height="22" Margin="294,217,0,0" VerticalAlignment="Top" Width="48" Background="#FF6D6D6D" FontWeight="Bold" FontSize="10" RenderTransformOrigin="0.511,0.547"/>
        <Button Style="{DynamicResource copiaEnchufe}" x:Name="apagado" Visibility="Visible" HorizontalAlignment="Left" Height="47" Margin="158,181,0,0" VerticalAlignment="Top" Width="47" Click="interruptor_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/apagado.png"/>
            </Button.Background>
        </Button>
        <CheckBox x:Name="sport" Content="Sport" Visibility="Hidden" HorizontalAlignment="Left" Height="18" Margin="448,207,0,0" VerticalAlignment="Top" Width="58" Foreground="White" Background="Red"/>
        <Rectangle HorizontalAlignment="Left" Height="142" Margin="406,57,0,0" Stroke="Black" VerticalAlignment="Top" Width="9" RadiusX="8" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF46FF05" Offset="0"/>
                    <GradientStop Color="#FF69C80E" Offset="0.187"/>
                    <GradientStop Color="#FFDADC0C" Offset="0.513"/>
                    <GradientStop Color="#FFD2E80D" Offset="0.377"/>
                    <GradientStop Color="#FFC76909" Offset="0.688"/>
                    <GradientStop Color="#FF840B05" Offset="0.793"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="barraRevoluciones" HorizontalAlignment="Left" Height="142" Margin="406,56,0,0" Stroke="Black" VerticalAlignment="Top" Width="10" Fill="Black" RenderTransformOrigin="0.5,0.5">
            <Rectangle.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Rectangle.LayoutTransform>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1" ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <CheckBox x:Name="modEco" Content="Eco" HorizontalAlignment="Left" Visibility="Hidden" Height="22" Margin="448,173,0,0" VerticalAlignment="Top" Width="57" Foreground="White" Background="#FF42FF00"/>
        <CheckBox x:Name="modNormal" Content="Normal" HorizontalAlignment="Left" Visibility="Hidden" Height="18" Margin="448,190,0,0" VerticalAlignment="Top" Width="62" Background="#FF484747" Foreground="White"/>
